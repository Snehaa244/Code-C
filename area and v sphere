//area and volume of sphere
#include<stdio.h>
int main()
{
    float r;
    const float pi = 3.14;
    printf( "Ã‹nter radius of sphere: ");
    scanf("%f" , &r);
    float area = 4 * pi *r*r;
    float volume = (4/3)*pi*r*r*r;
    printf("The area of sphere is %0.2f\n" , area );
    printf("The volume of sphere is %0.2f\n" , volume );
    return 0;
}
