//Prime Number
#include<stdio.h>
int main()
{
    int n , t=0;
    printf("Enter a number to check whether it is prime or not:- ");
    scanf("%d" , &n);
        for(int i=2;i<=n/2;i++)
        {
            if(n%i==0)//if the num is divisible by any other number t gets increased , if not , t remains constant 
            t++;
            
        }
    if(t==0 && n!=1 )
    printf("%d is a prime number" , n);
    else
    printf("%d is not a prime number" , n);
    
    return 0;
}
