//perfect number
//divisors of 6 ----> 1,2,3=1+2+3=6
#include<stdio.h>
int main()
{
    int n , sum=0;
    printf("Enter the number:- ");
    scanf("%d" , &n);
    int num = n;
    for(int i = 1 ; i<num ; i++)
    {
        if(num%i==0)
        sum = sum+i;
    }
    if(sum==n)
    printf("%d is perfect number" , n);
    else
    printf("%d is not perfect number" , n);


    return 0;


}
